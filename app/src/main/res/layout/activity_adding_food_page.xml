<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".AddingFoodPage">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/headerView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F3EEEA"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:onClick="back"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ADD FOOD"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/checkMark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/check" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerView"
            android:background="@drawable/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp">

                    <Button
                        android:id="@+id/beefImage"
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:text="HELLO"
                        android:textColor="#FFFFFF"
                        android:textAlignment="gravity"
                        android:background="@drawable/beef" />
                    <Button
                        android:id="@+id/lambImage"
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/lamb" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp">

                    <Button
                        android:id="@+id/chickenImage"
                        android:onClick="chickenPopUp"
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/chicken" />

                    <Button
                        android:id="@+id/porkImg"
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/pork" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp">

                    <Button
                        android:id="@+id/vegImg"
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/bok" />

                    <Button
                        android:id="@+id/fishImg"
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/fish" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp">

                    <Button
                        android:id="@+id/cheeseImg"
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/cheese" />

                    <Button
                        android:id="@+id/potatoImg"
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/potato" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp">

                    <Button
                        android:id="@+id/tofuImg"
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/tofu" />

                    <Button
                        android:id="@+id/yogurtImg"
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/yogurt" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp">

                    <Button
                        android:id="@+id/beansImg"
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/beans" />

                    <Button
                        android:id="@+id/eggImg"
                        android:layout_width="350dp"
                        android:layout_height="180dp"
                        android:layout_margin="5dp"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:background="@drawable/egg" />

                </LinearLayout>


            </LinearLayout>


        </ScrollView>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>