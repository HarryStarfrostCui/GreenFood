<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.AddingFoodFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/headerView"
    android:background="@drawable/background">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/meal_1_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/beef"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/meal_1_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/meal_1_description"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/meal_1_image">
        </ImageView>

        <ImageView
            android:id="@+id/meal_2_description"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/box"
            app:layout_constraintEnd_toStartOf="@+id/meal_2_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/meal_1_image">
        </ImageView>

        <ImageView
            android:id="@+id/meal_2_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/lamb"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal_1_description"
            app:layout_constraintStart_toEndOf="@id/meal_2_description"/>

        <ImageView
            android:id="@+id/meal_3_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/chicken"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/meal_3_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/meal_2_description" />

        <ImageView
            android:id="@+id/meal_3_description"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/box"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/meal_2_image"
            app:layout_constraintStart_toEndOf="@id/meal_3_image">
        </ImageView>

        <ImageView
            android:id="@+id/meal_4_description"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/box"
            app:layout_constraintEnd_toStartOf="@+id/meal_4_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/meal_3_image">
        </ImageView>

        <ImageView
            android:id="@+id/meal_4_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/fish"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal_3_description" />

        <ImageView
            android:id="@+id/meal_5_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/pork"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/meal_5_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/meal_4_description" />

        <ImageView
            android:id="@+id/meal_5_description"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/box"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/meal_4_image"
            app:layout_constraintStart_toEndOf="@id/meal_5_image">
        </ImageView>

        <ImageView
            android:id="@+id/meal_6_description"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/box"
            app:layout_constraintEnd_toStartOf="@+id/meal_6_image"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/meal_5_image">
        </ImageView>

        <ImageView
            android:id="@+id/meal_6_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/egg"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal_5_description"
            app:layout_constraintStart_toEndOf="@id/meal_6_description"/>

        <ImageView
            android:id="@+id/meal_7_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/veg"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toStartOf="@+id/meal_7_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/meal_6_description" />

        <ImageView
            android:id="@+id/meal_7_description"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/box"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/meal_6_image"
            app:layout_constraintStart_toEndOf="@id/meal_7_image">
        </ImageView>

        <ImageView
            android:id="@+id/meal_8_description"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/box"
            app:layout_constraintEnd_toStartOf="@+id/meal_8_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/meal_7_image">
        </ImageView>

        <ImageView
            android:id="@+id/meal_8_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/bread"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal_7_description"
            app:layout_constraintStart_toEndOf="@id/meal_8_description"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>
