<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="GreenHeading" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#228B22</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="GreenHeadingSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#228B22</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="BlackText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="YellowText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFCC00</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="GreenText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#006400</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="RedText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#ff0000</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
