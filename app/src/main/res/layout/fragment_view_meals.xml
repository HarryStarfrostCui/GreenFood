<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.AddingFoodFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/headerView"
    android:background="@drawable/background">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/beef_picture"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:background="@drawable/beef"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/beefRadioGroup"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_weight="0.5"
            android:background="@drawable/box"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/beef"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/beefRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:text="@string/beef1"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/beefRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:text="@string/beef2"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/beefRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:text="@string/beef3"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/beefRadio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:text="@string/beef4"
                android:textStyle="bold" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/lambRadioGroup"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/box"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/beef_picture"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/lamb"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/lambRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:text="@string/lamb1"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/lambRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:text="@string/lamb2"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/lambRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:text="@string/lamb3"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/lambRadio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:text="@string/lamb4"
                android:textStyle="bold" />
        </RadioGroup>

        <ImageView
            android:id="@+id/lamb_picture"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/lamb"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/beefRadioGroup" />

        <ImageView
            android:id="@+id/chicken_picture"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:background="@drawable/chicken"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/lambRadioGroup"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/chickenRadioGroup"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_weight="0.5"
            android:background="@drawable/box"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lamb_picture">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/chicken"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/chickenRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:text="@string/chicken1"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/chickenRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:text="@string/chicken2"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/chickenRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:text="@string/chicken3"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/chickenRadio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000000"
                android:text="@string/chicken4"
                android:textStyle="bold" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/fishRadioGroup"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/starbucks"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/chicken_picture"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/fish"
                android:textColor="#036635"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/fishRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#036635"
                android:text="@string/fish1"
                android:textColor="#036635"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/fishRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#036635"
                android:text="@string/fish2"
                android:textColor="#036635"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/fishRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#036635"
                android:text="@string/fish3"
                android:textColor="#036635"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/fishRadio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#036635"
                android:text="@string/fish4"
                android:textColor="#036635"
                android:textStyle="bold" />
        </RadioGroup>

        <ImageView
            android:id="@+id/fish_picture"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/fish"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chickenRadioGroup" />

        <ImageView
            android:id="@+id/pork_picture"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:background="@drawable/pork"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/fishRadioGroup"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/porkRadioGroup"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/mcdonalds"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fish_picture">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/pork"
                android:textColor="#FF0000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/porkRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFD700"
                android:text="@string/pork1"
                android:textColor="#FFD700"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/porkRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FF0000"
                android:text="@string/pork2"
                android:textColor="#FF0000"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/porkRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFD700"
                android:text="@string/pork3"
                android:textColor="#FFD700"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/porkRadio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FF0000"
                android:text="@string/pork4"
                android:textColor="#FF0000"
                android:textStyle="bold" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/eggRadioGroup"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/aandw"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/pork_picture"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/egg"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/eggRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFA500"
                android:text="@string/egg1"
                android:textColor="#FFA500"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/eggRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#654321"
                android:text="@string/egg2"
                android:textColor="#654321"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/eggRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFA500"
                android:text="@string/egg3"
                android:textColor="#FFA500"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/eggRadio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#654321"
                android:text="@string/egg4"
                android:textColor="#654321"
                android:textStyle="bold" />
        </RadioGroup>

        <ImageView
            android:id="@+id/egg_picture"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/egg"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/porkRadioGroup" />

        <ImageView
            android:id="@+id/veggies_picture"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:background="@drawable/veg"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/eggRadioGroup"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/vegRadioGroup"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/sleepcountry"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/egg_picture">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/veggie"
                android:textColor="#FF0000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/veggieRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FF0020"
                android:text="@string/veggie1"
                android:textColor="#FF0020"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/veggieRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FF0040"
                android:text="@string/veggie2"
                android:textColor="#FF0040"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/veggieRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FF0060"
                android:text="@string/veggie3"
                android:textColor="#FF0060"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/veggieRadio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FF0080"
                android:text="@string/veggie4"
                android:textColor="#FF0080"
                android:textStyle="bold" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/breadRadioGroup"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/city"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/veggies_picture"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/bread"
                android:textColor="#FF69B4"
                android:textSize="25sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/breadRadio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FF0000"
                android:text="@string/bread1"
                android:textColor="#FF0000"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/breadRadio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFF00"
                android:text="@string/bread2"
                android:textColor="#FFFF00"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/breadRadio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#00FF00"
                android:text="@string/bread3"
                android:textColor="#00FF00"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/breadRadio4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#0000FF"
                android:text="@string/bread4"
                android:textColor="#0000FF"
                android:textStyle="bold" />
        </RadioGroup>

        <ImageView
            android:id="@+id/bread_picture"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/bread"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vegRadioGroup" />

        <Button
            android:id="@+id/add_food_button"
            style="@style/NiceButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/add_food_button_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bread_picture" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>